{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.tradehub.desktop",
  "productName": "Trade Control Hub",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "public/pwa-512x512.png"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "public/pwa-512x512.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "public/pwa-512x512.png",
    "uninstallerIcon": "public/pwa-512x512.png",
    "installerHeaderIcon": "public/pwa-512x512.png",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Trade Control Hub"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "public/pwa-512x512.png"
  },
  "mac": {
    "target": ["dmg"],
    "icon": "public/pwa-512x512.png"
  }
}
